<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.group28.cs160.noms4two.MainActivity"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/caloriesCircle"
            android:layout_centerHorizontal="true"
            android:layout_width="225dp"
            android:layout_height="225dp"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_below="@id/caloriesCircle"
            android:dividerPadding="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:gravity="start">
                <FrameLayout
                    android:layout_column="1"
                    android:id="@+id/calciumCircle"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <FrameLayout
                    android:layout_column="2"
                    android:id="@+id/proteinCircle"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </TableRow>

            <TableRow>
                <FrameLayout
                    android:layout_column="1"
                    android:id="@+id/fiberCircle"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <FrameLayout
                    android:layout_column="2"
                    android:id="@+id/ironCircle"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </TableRow>

            <TableRow>
                <FrameLayout
                    android:layout_column="1"
                    android:id="@+id/potassiumCircle"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <FrameLayout
                    android:layout_column="2"
                    android:id="@+id/vitamincCricle"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</ScrollView>
